<Window x:Class="Todo.TimeTrackingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time tracking" Height="500" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Range controls -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <DatePicker x:Name="FromDatePicker" SelectedDateChanged="DateRange_Changed"/>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="12,0,6,0"/>
            <DatePicker x:Name="ToDatePicker" SelectedDateChanged="DateRange_Changed"/>
            <Button Content="Refresh" Click="RefreshButton_Click" Margin="12,0,0,0"/>
        </StackPanel>

        <!-- Summaries grid -->
        <DataGrid x:Name="SummariesGrid" Grid.Row="1" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="110"/>
                <DataGridTextColumn Header="Open" Width="90">
                    <DataGridTextColumn.Binding>
                        <Binding Path="OpenTime" StringFormat="{}{0:hh\:mm\:ss}" TargetNullValue="-"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Close" Width="90">
                    <DataGridTextColumn.Binding>
                        <Binding Path="CloseTime" StringFormat="{}{0:hh\:mm\:ss}" TargetNullValue="-"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Worked" Width="90">
                    <DataGridTextColumn.Binding>
                        <Binding Path="WorkedHours" StringFormat="{}{0:0.00}" TargetNullValue="-"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Standard" Binding="{Binding StandardHours, StringFormat={}{0:0.00}}" Width="90"/>
                <DataGridTextColumn Header="Delta" Width="90">
                    <DataGridTextColumn.Binding>
                        <Binding Path="DeltaHours" StringFormat="{}{0:+0.00;-0.00;0.00}" TargetNullValue="-"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Templates pane -->
        <GroupBox Header="Templates" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="12,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="TemplatesList" DisplayMemberPath="JobDescription" SelectionChanged="TemplatesList_SelectionChanged"/>
                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="Add" Click="AddTemplate_Click" Margin="0,0,8,0"/>
                    <Button Content="Edit" Click="EditTemplate_Click" x:Name="EditTemplateButton" IsEnabled="False" Margin="0,0,8,0"/>
                    <Button Content="Close" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Footer: totals -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
            <TextBlock Text="Total worked:" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalWorkedText" Text="0.00" Margin="8,0,16,0" VerticalAlignment="Center"/>
            <TextBlock Text="Total standard:" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalStandardText" Text="0.00" Margin="8,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>