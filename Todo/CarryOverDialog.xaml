<Window x:Class="Todo.CarryOverDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Todo"
        Title="Unfinished Tasks from Previous Day" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- BoolToVis was referenced in XAML but not defined; reuse CountToVisibilityConverter for description visibility -->
        <local:CountToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <ItemsControl x:Name="ItemsControlTasks" ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFDDDDDD" BorderThickness="1" Padding="8" Margin="0,0,0,8" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="{Binding Task.TaskName}" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Task.Description}" Foreground="Gray" TextWrapping="Wrap" Margin="0,4,0,6" Visibility="{Binding Task.Description, Converter={StaticResource BoolToVis}}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <RadioButton Content="Copy to today" GroupName="{Binding Task.Id}" IsChecked="{Binding IsCopyToday, Mode=TwoWay}" Margin="0,0,12,0" />
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <RadioButton Content="Copy to future" GroupName="{Binding Task.Id}" IsChecked="{Binding IsCopyFuture, Mode=TwoWay}" Margin="0,0,6,0" />
                                        <DatePicker SelectedDate="{Binding FutureDate, Mode=TwoWay}" IsEnabled="{Binding IsCopyFuture}" />
                                    </StackPanel>
                                    <RadioButton Content="Mark as completed" GroupName="{Binding Task.Id}" IsChecked="{Binding IsMarkCompleted, Mode=TwoWay}" Margin="12,0,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="90" Margin="6" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="90" Margin="6" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>