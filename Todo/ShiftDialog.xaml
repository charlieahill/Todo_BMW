<Window x:Class="Todo.ShiftDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shift" Height="760" Width="760" WindowStartupLocation="CenterOwner"
        KeyDown="Window_KeyDown">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,6">
            <TextBlock Text="Start:" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <ListView x:Name="StartList" Grid.Column="0" Height="260" SelectionChanged="StartList_SelectionChanged" HorizontalAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock Text="Or enter time (HH:MM):" />
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="StartText" HorizontalAlignment="Stretch" TextChanged="StartText_TextChanged" />
                        <!-- blue info icon appears when manually edited (no tooltip) -->
                        <TextBlock x:Name="StartManualInfo" Text="&#x2139;" Foreground="DodgerBlue" Margin="8,4,0,0" Visibility="Collapsed" FontWeight="Bold" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,6">
            <TextBlock Text="End:" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <ListView x:Name="EndList" Grid.Column="0" Height="260" SelectionChanged="EndList_SelectionChanged" HorizontalAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock Text="Or enter time (HH:MM):" />
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="EndText" HorizontalAlignment="Stretch" TextChanged="EndText_TextChanged" />
                        <TextBlock x:Name="EndManualInfo" Text="&#x2139;" Foreground="DodgerBlue" Margin="8,4,0,0" Visibility="Collapsed" FontWeight="Bold" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,6">
            <StackPanel>
                <TextBlock Text="Lunch break (HH:MM)" />
                <TextBox x:Name="LunchText" Width="120" />
            </StackPanel>
            <StackPanel Margin="12,0,0,0">
                <TextBlock Text="Day mode" />
                <ComboBox x:Name="DayModeCombo" Width="220">
                    <ComboBoxItem IsSelected="True">Regular Day</ComboBoxItem>
                    <ComboBoxItem>Working from Home</ComboBoxItem>
                    <ComboBoxItem>Travelling</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,6">
            <TextBlock Text="Description" />
            <TextBox x:Name="DescBox" HorizontalAlignment="Stretch" MaxWidth="720" />
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="4" Click="Ok_Click" IsDefault="True" />
            <Button Content="Cancel" Width="80" Margin="4" Click="Cancel_Click" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>