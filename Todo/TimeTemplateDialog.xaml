<Window x:Class="Todo.TimeTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Template" Height="360" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Start:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <DatePicker x:Name="StartDatePicker"/>
            <TextBlock Text="End:" VerticalAlignment="Center" Margin="12,0,6,0"/>
            <DatePicker x:Name="EndDatePicker"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="Job:" VerticalAlignment="Center" Margin="0,0,6,0" Width="40"/>
            <TextBox x:Name="JobText" Width="300"/>
        </StackPanel>

        <GroupBox Header="Hours per weekday (Mon..Sun)" Grid.Row="2" Margin="0,8,0,0">
            <UniformGrid Columns="7">
                <TextBox x:Name="Mon"/>
                <TextBox x:Name="Tue"/>
                <TextBox x:Name="Wed"/>
                <TextBox x:Name="Thu"/>
                <TextBox x:Name="Fri"/>
                <TextBox x:Name="Sat"/>
                <TextBox x:Name="Sun"/>
            </UniformGrid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" Width="80" Click="Ok_Click" Margin="0,0,8,0"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>