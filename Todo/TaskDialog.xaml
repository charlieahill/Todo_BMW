<Window x:Class="Todo.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="400" Width="400" WindowStartupLocation="CenterOwner"
        Background="White" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI, Calibri, Arial"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Task Title"/>
        <TextBox x:Name="TitleBox" Grid.Row="0" Margin="0,24,0,0"/>
        <Label Content="Description" Grid.Row="1"/>
        <TextBox x:Name="DescriptionBox" Grid.Row="1" Margin="0,24,0,0" AcceptsReturn="True" Height="60"/>
        <Label Content="People" Grid.Row="2"/>
        <ComboBox x:Name="PeopleBox" Grid.Row="2" Margin="0,24,0,0" IsEditable="True" IsTextSearchEnabled="True" ItemsSource="{Binding PeopleSuggestions}"/>
        <ListBox x:Name="PeopleList" Grid.Row="3" Height="40"/>
        <Label Content="Meetings" Grid.Row="4"/>
        <ComboBox x:Name="MeetingsBox" Grid.Row="4" Margin="0,24,0,0" IsEditable="True" IsTextSearchEnabled="True" ItemsSource="{Binding MeetingSuggestions}"/>
        <ListBox x:Name="MeetingsList" Grid.Row="5" Height="40"/>
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
