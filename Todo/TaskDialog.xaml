<Window x:Class="Todo.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="820" Width="520" WindowStartupLocation="CenterOwner"
        Background="White" ResizeMode="CanResize">
    <Window.Resources>
        <!-- Minimal, clean styles -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI, Calibri, Arial"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI, Calibri, Arial"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,6"/>
        </Style>
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f3f8ff"/>
                                <Setter Property="BorderBrush" Value="#3399ff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title label -->
            <RowDefinition Height="Auto"/> <!-- Title box -->
            <RowDefinition Height="Auto"/> <!-- Description label -->
            <RowDefinition Height="Auto"/> <!-- Description box -->
            <RowDefinition Height="Auto"/> <!-- People label -->
            <RowDefinition Height="Auto"/> <!-- People box + list -->
            <RowDefinition Height="Auto"/> <!-- Meetings label -->
            <RowDefinition Height="Auto"/> <!-- Meetings box + list -->
            <RowDefinition Height="*"/>    <!-- spacer -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="Task Title"/>
        <Border Grid.Row="1" Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,8">
            <TextBox x:Name="TitleBox" />
        </Border>

        <!-- Description -->
        <Label Grid.Row="2" Content="Description"/>
        <Border Grid.Row="3" Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,8">
            <TextBox x:Name="DescriptionBox" AcceptsReturn="True" Height="160" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </Border>

        <!-- People -->
        <Label Grid.Row="4" Content="People"/>
        <StackPanel Grid.Row="5" Orientation="Vertical">
            <Border Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,6">
                <DockPanel>
                    <ComboBox x:Name="PeopleBox" IsEditable="True" IsTextSearchEnabled="True" ItemsSource="{Binding PeopleSuggestions}" DockPanel.Dock="Left" Width="340"/>
                    <Button Content="Add" Click="AddPersonButton_Click" Style="{StaticResource FlatButton}" Margin="8,0,0,0"/>
                </DockPanel>
            </Border>
            <Border Background="Transparent" Margin="0,0,0,8">
                <ListBox x:Name="PeopleList" Height="90"/>
            </Border>
        </StackPanel>

        <!-- Meetings -->
        <Label Grid.Row="6" Content="Meetings"/>
        <StackPanel Grid.Row="7" Orientation="Vertical">
            <Border Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,6">
                <DockPanel>
                    <ComboBox x:Name="MeetingsBox" IsEditable="True" IsTextSearchEnabled="True" ItemsSource="{Binding MeetingSuggestions}" DockPanel.Dock="Left" Width="340"/>
                    <Button Content="Add" Click="AddMeetingButton_Click" Style="{StaticResource FlatButton}" Margin="8,0,0,0"/>
                </DockPanel>
            </Border>
            <Border Background="Transparent">
                <ListBox x:Name="MeetingsList" Height="90"/>
            </Border>
        </StackPanel>

        <!-- Action buttons -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,12">
            <Button Style="{StaticResource FlatButton}" Content="OK" Click="OkButton_Click" Margin="0,0,8,0"/>
            <Button Style="{StaticResource FlatButton}" Content="Cancel" Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
    </ScrollViewer>
</Window>
