<Window x:Class="Todo.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Task" Height="920" Width="900" WindowStartupLocation="CenterOwner"
        Background="White" ResizeMode="CanResize" MinWidth="760">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <!-- Minimal, clean styles -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI, Calibri, Arial"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Segoe UI, Calibri, Arial"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,6"/>
        </Style>
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f3f8ff"/>
                                <Setter Property="BorderBrush" Value="#3399ff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title label -->
            <RowDefinition Height="Auto"/> <!-- Title box -->
            <RowDefinition Height="Auto"/> <!-- Future toggle row -->
            <RowDefinition Height="Auto"/> <!-- Description label -->
            <RowDefinition Height="Auto"/> <!-- Description box -->
            <RowDefinition Height="Auto"/> <!-- People label -->
            <RowDefinition Height="Auto"/> <!-- People box + list -->
            <RowDefinition Height="Auto"/> <!-- Meetings label -->
            <RowDefinition Height="Auto"/> <!-- Meetings box + list -->
            <RowDefinition Height="Auto"/> <!-- Link label -->
            <RowDefinition Height="Auto"/> <!-- Link box -->
            <RowDefinition Height="*"/>    <!-- spacer -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        
        <!-- Title -->
        <Label Grid.Row="0" Content="Task Title"/>
        <Border Grid.Row="1" Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,8">
            <TextBox x:Name="TitleBox" />
        </Border>

        <!-- Future toggle and date -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
            <CheckBox Content="Show in future" IsChecked="{Binding IsFuture, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <DatePicker SelectedDate="{Binding FutureDate, Mode=TwoWay}" Width="220" Visibility="{Binding IsFuture, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>

        <!-- Description -->
        <Label Grid.Row="3" Content="Description"/>
        <Border Grid.Row="4" Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,8">
            <TextBox x:Name="DescriptionBox" AcceptsReturn="True" Height="160" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </Border>

        <!-- People -->
        <Label Grid.Row="5" Content="People"/>
        <StackPanel Grid.Row="6" Orientation="Vertical">
            <Border Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="PeopleBox" IsEditable="True" IsTextSearchEnabled="True" ItemsSource="{Binding PeopleSuggestions}" Grid.Column="0" HorizontalAlignment="Stretch"/>
                    <Button Content="Add" Click="AddPersonButton_Click" Style="{StaticResource FlatButton}" Margin="8,0,0,0" Grid.Column="1"/>
                </Grid>
            </Border>
            <Border Background="Transparent" Margin="0,0,0,8">
                <ListBox x:Name="PeopleList" Height="90"/>
            </Border>
        </StackPanel>

        <!-- Meetings -->
        <Label Grid.Row="7" Content="Meetings"/>
        <StackPanel Grid.Row="8" Orientation="Vertical">
            <Border Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,0,0,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="MeetingsBox" IsEditable="True" IsTextSearchEnabled="True" ItemsSource="{Binding MeetingSuggestions}" Grid.Column="0" HorizontalAlignment="Stretch"/>
                    <Button Content="Add" Click="AddMeetingButton_Click" Style="{StaticResource FlatButton}" Margin="8,0,0,0" Grid.Column="1"/>
                </Grid>
            </Border>
            <Border Background="Transparent">
                <ListBox x:Name="MeetingsList" Height="90"/>
            </Border>
        </StackPanel>

        <!-- Link (file or folder) -->
        <Label Grid.Row="9" Content="Link (file or folder)"/>
        <Border Grid.Row="10" Background="#FFF8F8F8" CornerRadius="4" Padding="4" Margin="0,4,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Globe icon shown only for http/https links -->
                <Viewbox Grid.Column="0" Width="18" Height="18" VerticalAlignment="Center" Visibility="{Binding IsHyperlink, Converter={StaticResource BoolToVis}}">
                    <Canvas Width="24" Height="24">
                        <!-- Simple globe icon: circle with meridian and latitude lines -->
                        <Ellipse Stroke="DarkSlateGray" StrokeThickness="1.2" Fill="Transparent" Width="16" Height="16" Canvas.Left="4" Canvas.Top="4"/>
                        <Path Stroke="DarkSlateGray" StrokeThickness="1" Fill="Transparent" Data="M12,4 L12,20 M4,12 L20,12 M6,7 C8,9 16,9 18,7 M6,17 C8,15 16,15 18,17"/>
                    </Canvas>
                </Viewbox>

                <TextBox x:Name="LinkBox" Grid.Column="1" IsReadOnly="True" HorizontalAlignment="Stretch" Text="{Binding LinkPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    <Button Content="Browse..." Click="BrowseLinkButton_Click" Style="{StaticResource FlatButton}" Margin="8,0,0,0"/>
                    <Button Content="Folder..." Click="BrowseFolderButton_Click" Style="{StaticResource FlatButton}" Margin="8,0,0,0"/>
                    <Button Content="Paste" Click="PasteLinkButton_Click" ToolTip="Paste URL or path from clipboard" Style="{StaticResource FlatButton}" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action buttons -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,12">
            <Button Style="{StaticResource FlatButton}" Content="OK" Click="OkButton_Click" Margin="0,0,8,0"/>
            <Button Style="{StaticResource FlatButton}" Content="Cancel" Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
    </ScrollViewer>
</Window>
