<Window x:Class="Todo.ExportOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export options" Height="520" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top">
            <GroupBox Header="Years" Margin="0,0,0,10">
                <!-- Column layout: select-all at the top, then list below -->
                <StackPanel>
                    <CheckBox x:Name="SelectAllYears" Content="Select all years" IsThreeState="True" Margin="6,6,6,4" Click="SelectAllYears_Click"/>
                    <Border BorderBrush="#DDD" BorderThickness="1" Padding="6" Margin="6,0,6,6">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                            <ItemsControl x:Name="YearsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Year}" IsChecked="{Binding IsChecked, Mode=TwoWay}" FontSize="14" Padding="4"
                                                  Checked="YearItem_CheckChanged" Unchecked="YearItem_CheckChanged"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Map types">
                <!-- Column layout: select-all at the top, then list below -->
                <StackPanel>
                    <CheckBox x:Name="SelectAllMaps" Content="Select all map types" IsThreeState="True" Margin="6,6,6,4" Click="SelectAllMaps_Click"/>
                    <Border BorderBrush="#DDD" BorderThickness="1" Padding="6" Margin="6,0,6,6">
                        <ItemsControl x:Name="MapsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked, Mode=TwoWay}" FontSize="14" Padding="4"
                                              Checked="MapItem_CheckChanged" Unchecked="MapItem_CheckChanged"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Margin="0,0,6,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </DockPanel>
</Window>
